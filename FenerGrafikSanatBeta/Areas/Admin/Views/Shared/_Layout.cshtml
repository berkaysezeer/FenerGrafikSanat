<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>FGS | @ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Areas/Admin/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Areas/Admin/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link href="~/Areas/Admin/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/Areas/Admin/dist/css/adminlte.min.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/Areas/Admin/plugins/summernote/summernote-bs4.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700|Work+Sans:400,700,800&display=swap&subset=latin-ext" rel="stylesheet">
    <link rel="shortcut icon" href="~/img/fav.ico" type="image/x-icon" />
</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark navbar-primary">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Index", "Anasayfa", new { area = "" })" class="nav-link">Siteye Dön</a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar elevation-4 sidebar-light-primary">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index", "Dashboard")" class="brand-link">
                <img src="~/img/mainlogo.png"
                     alt="AdminLTE Logo"
                     class="brand-image img-circle elevation-0"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Yönetici Paneli</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/img/profile.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="@Url.Action("Index","HesapYonetim",new { area=""})" class="d-block">@User.Identity.Name</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column nav-child-indent" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            @MenuLink("Dashboard", "Index", "Dashboard", "fas fa-tachometer-alt")
                        </li>
                        <li class="nav-item has-treeview menu-open">
                            @MenuLink("Kategoriler", "", "Kategoriler", "fas fa-table", true)
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    @MenuLink("Kategori Listesi", "Index", "Kategoriler", "fas fa-list")
                                </li>
                                <li class="nav-item">
                                    @MenuLink("Yeni Ekle", "Yeni", "Kategoriler", "fas fa-plus")
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview menu-open">
                            @MenuLink("Tasarımlar", "", "Tasarimlar", "fas fa-file-alt", true)
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    @MenuLink("Tasarım Listesi", "Index", "Tasarimlar", "fas fa-list")
                                </li>
                                <li class="nav-item">
                                    @MenuLink("Yeni Ekle", "Yeni", "Tasarimlar", "fas fa-plus")
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview menu-open">
                            @MenuLink("Yorumlar", "", "Yorumlar", "fas fa-comment", true)
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    @MenuLink("Yorum Listesi", "Index", "Yorumlar", "fas fa-list")
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                        </div>
                        <div class="col-sm-6">
                            @Html.Partial("_BreadCrumbPartial")
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                @RenderBody()

            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>

    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/Areas/Admin/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery Validation -->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Areas/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables -->
    <script src="~/Areas/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/Admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Areas/Admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Areas/Admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Areas/Admin/plugins/toastr/toastr.min.js"></script>
    <script src="~/Areas/Admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="~/Areas/Admin/plugins/bootstrap-switch/js/bootstrap-switch.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Areas/Admin/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Areas/Admin/dist/js/demo.js"></script>
    <!-- Summernote -->
    <script src="~/Areas/Admin/plugins/summernote/summernote-bs4.min.js"></script>

    <script src="~/Areas/Admin/dist/js/slug.js"></script>

    <script>
        slug.init("@Url.Action("ConvertToSlug","Slug")");
    </script>

    <script src="~/Areas/Admin/dist/js/admin.custom.js"></script>
    @RenderSection("scripts", false)
    <script>

        @if (TempData["SuccessMessage"] != null)
        {
            <text>
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-bottom-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        toastr.success('@(TempData["SuccessMessage"])');
            </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
        toastr.error('@(TempData["ErrorMessage"])');
        toastr.options = {
            "closeButton": false,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-bottom-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
            </text>
        }
    </script>
</body>
</html>

@helper MenuLink(string linkText, string actionName, string controllerName, string iconClass, bool isParent = false)
{
    var currentController = this.ViewContext.RouteData.Values["controller"].ToString();
    var currentAction = this.ViewContext.RouteData.Values["action"].ToString();
    bool isActive = controllerName == currentController && (isParent || actionName == currentAction);

    <a href="@Url.Action(actionName, controllerName)" class="nav-link @(isActive ? "active" : "")">
        <i class="nav-icon @iconClass"></i>
        <p>
            @linkText

            @if (isParent)
            {
                <i class="right fas fa-angle-left"></i>
            }
        </p>
    </a>
}